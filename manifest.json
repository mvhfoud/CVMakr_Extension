{
  "manifest_version": 3,
  "name": "CVMakr Job Scraper",
  "version": "0.1.0",
  "description": "Scrape job listings from the active tab and prepare JSON payloads for later APIs.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "icons": {
    "16": "assets/cvmakr-logo-16.png",
    "48": "assets/cvmakr-logo-48.png",
    "128": "assets/cvmakr-logo-128.png"
  },
  "action": {
    "default_title": "Scrape Job",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/cvmakr-logo-16.png",
      "48": "assets/cvmakr-logo-48.png",
      "128": "assets/cvmakr-logo-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
